    <!-- Get in touch -->
    <section id="contact" class="container-fluid px-md-5 pt-6 pb-5">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h2 class="text-center pb-4">Get in Touch</h2>
                <form method="post" action="{{ path_for('contact') }}" class="get-in-touch">
                <input type="hidden" name="{{ nameKey }}" value="{{ name }}">
                <input type="hidden" name="{{ valueKey }}" value="{{  value }}">
                <div class="form-group has-danger">
                    <label class="form-control-label" for="firstname">First name (required)</label>
                    <input class="form-control form-control-danger" name="firstname" maxlength="50" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="lastname">Last name (required)</label>
                    <input class="form-control" name="lastname" maxlength="50" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="email">Email (required)</label>
                    <input class="form-control" name="email" type="email" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="subject">Subject (required)</label>
                    <input class="form-control" name="subject" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="level">Japanese Level (required)</label>
