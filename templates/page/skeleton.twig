        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset_url('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset_url('css/core.css?ver=2.0.0') }}" />

        <meta name="keywords" content="japanese, learning, teacher, teaching, learn, nursing, language, nottingham, online, japanese teacher" />
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset_url('img/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="96x96" href="{{ asset_url('img/favicon-96x96.png') }}">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
        <meta name="Description" content="{% block meta_description %}{% endblock %}">
        <title>{% block title %}{% endblock %} | Why not Japanese | Japanese Teacher | Online</title>
    </head>
    <body class="{% block body_class %}{% endblock %}">
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WKZ8BL9"
