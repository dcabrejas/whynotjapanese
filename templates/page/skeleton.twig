        <!-- End Google Tag Manager (noscript) -->

        <!-- Footer -->
        {% block nav %}
            {{ include('page/nav.twig') }}
        {% endblock %}

        <!-- Messages -->
        {% for message in messages.flushMessages %}
            <div class="alert alert-{{ message['type']|escape }} alert-dismissible fade show" role="alert">
                {{ message['message']|escape }}
            </div>
        {% endfor %}

        <!-- Content -->
        {% block content %}{% endblock %}

        <!-- Footer -->
        {% block footer %}
            {{ include('page/footer.twig') }}
        {% endblock %}

        <!-- Js scripts -->
        <script src="{{ asset_url('js/lib/jquery-3.3.1.min.js') }}"></script>
        <script src="{{ asset_url('js/lib/popper.min.js') }}"></script>
        <script src="{{ asset_url('js/lib/bootstrap.min.js') }}"></script>
        <script src=" {{ asset_url('js/lib/jquery.validate.min.js') }}"></script>
        <script src=" {{ asset_url('js/core.js?v2.0.1') }}"></script>
    </body>
</html>
